<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"> 
    
    <title>@ViewBag.Title</title>
    <meta name="author" content="Alexey Shytikov" />
    
    <link rel="stylesheet" href="@Url.Content("~/Content/css/vendor/normalize.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/css/main.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/css/vendor/github.css")" />
   
    <script type="text/javascript" src="@Url.Content("~/Content/js/vendor/highlight.pack.js")"></script>

    <!--[if lt IE 9]>
        <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
        <script>window.html5 || document.write('<script src="js/vendor/html5shiv.js"><\/script>')</script>
    <![endif]-->
</head>
<body>
    <script type="text/javascript">hljs.initHighlightingOnLoad();</script>

    <div class="header-container">
        <header class="wrapper clearfix">
            <h1 class="title">Pasta & Basta</h1>
            <nav>
                <ul>
                    <li>@Html.ActionLink("Cook new!", "Create", "Pastie")</li>
                    <li><a href="#">Statistic</a></li>
                    <li><a href="#">About</a></li>
                </ul>
            </nav>
        </header>
    </div>

    <div class="main-container">
        <div class="main wrapper clearfix">
            @RenderBody()
        </div>
    </div>

    <div class="footer-container">
        <footer class="wrapper">
            <h3>&copy;2012</h3>
        </footer>
    </div>
</body>
</html>
